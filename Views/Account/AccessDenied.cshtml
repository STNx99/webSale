@{
    ViewData["Title"] = "Access Denied";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 text-center">
            <div class="alert alert-danger p-5 shadow">
                <h1 class="display-4 text-danger"><i class="fas fa-exclamation-triangle"></i> @ViewData["Title"]</h1>
                <p class="lead">You do not have access to this resource.</p>
                <hr>
                <p>Please contact the administrator if you believe this is an error.</p>
                <a class="btn btn-outline-primary mt-3" href="javascript:history.back()">Go Back</a>
                <a class="btn btn-primary mt-3" asp-controller="Home" asp-action="Index">Go to Homepage</a>
            </div>
        </div>
    </div>
</div>
