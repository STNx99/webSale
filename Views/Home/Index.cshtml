@{
    ViewData["Title"] = "Home Page";
}

<div class="hero-section text-center">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <h1 class="hero-title">Welcome to <span class="text-primary">Kirei</span> Shop</h1>
                <p class="hero-subtitle">Discover quality products with exceptional service</p>
                <div class="d-grid gap-2 d-md-block">
                    <a class="btn btn-primary btn-lg" asp-controller="Product" asp-action="Index">
                        <i class="bi bi-bag me-2"></i>Shop Now
                    </a>
                    <a class="btn btn-outline-primary btn-lg" asp-controller="Category" asp-action="Index">
                        <i class="bi bi-grid me-2"></i>Categories
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container py-4">
    <div class="row mb-4">
        <div class="col-12">
            <h2 class="section-title">Featured Products</h2>
        </div>
    </div>
    <div class="row">
        <!-- These are placeholder cards; replace them with actual product data -->
        <div class="col-md-4 mb-4">
            <div class="card product-card h-100">
                <div class="position-absolute top-0 end-0 m-2">
                    <span class="badge bg-primary">New</span>
                </div>
                <img src="https://via.placeholder.com/300x200" class="card-img-top" alt="Product Image" loading="lazy">
                <div class="card-body">
                    <h5 class="card-title">Product Name</h5>
                    <p class="card-text">This is a short description of the product showcasing its key features and benefits.</p>
                    <p class="product-price">$19.99</p>
                    <a href="#" class="btn btn-primary w-100">
                        <i class="bi bi-cart-plus me-2"></i>Add to Cart
                    </a>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card product-card h-100">
                <div class="position-absolute top-0 end-0 m-2">
                    <span class="badge bg-danger">Sale</span>
                </div>
                <img src="https://via.placeholder.com/300x200" class="card-img-top" alt="Product Image" loading="lazy">
                <div class="card-body">
                    <h5 class="card-title">Product Name</h5>
                    <p class="card-text">This is a short description of the product showcasing its key features and benefits.</p>
                    <div class="d-flex align-items-center">
                        <p class="product-price mb-0">$29.99</p>
                        <small class="text-decoration-line-through text-muted ms-2">$39.99</small>
                    </div>
                    <a href="#" class="btn btn-primary w-100 mt-3">
                        <i class="bi bi-cart-plus me-2"></i>Add to Cart
                    </a>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card product-card h-100">
                <img src="https://via.placeholder.com/300x200" class="card-img-top" alt="Product Image" loading="lazy">
                <div class="card-body">
                    <h5 class="card-title">Product Name</h5>
                    <p class="card-text">This is a short description of the product showcasing its key features and benefits.</p>
                    <p class="product-price">$39.99</p>
                    <a href="#" class="btn btn-primary w-100">
                        <i class="bi bi-cart-plus me-2"></i>Add to Cart
                    </a>
                </div>
            </div>
        </div>
    </div>
    
    <div class="text-center mt-3">
        <a class="btn btn-outline-primary" asp-controller="Product" asp-action="Index">
            View All Products <i class="bi bi-arrow-right ms-2"></i>
        </a>
    </div>
</div>

<div class="bg-light-gray py-5 my-5">
    <div class="container">
        <div class="row">
            <div class="col-md-3 mb-4 mb-md-0 text-center feature-card">
                <i class="bi bi-truck text-primary feature-icon" style="font-size: 2.5rem;"></i>
                <h5 class="mt-3">Free Shipping</h5>
                <p class="text-muted">On orders over $50</p>
            </div>
            <div class="col-md-3 mb-4 mb-md-0 text-center feature-card">
                <i class="bi bi-shield-check text-primary feature-icon" style="font-size: 2.5rem;"></i>
                <h5 class="mt-3">Secure Payment</h5>
                <p class="text-muted">100% secure payment</p>
            </div>
            <div class="col-md-3 mb-4 mb-md-0 text-center feature-card">
                <i class="bi bi-headset text-primary feature-icon" style="font-size: 2.5rem;"></i>
                <h5 class="mt-3">24/7 Support</h5>
                <p class="text-muted">Dedicated support</p>
            </div>
            <div class="col-md-3 text-center feature-card">
                <i class="bi bi-arrow-return-left text-primary feature-icon" style="font-size: 2.5rem;"></i>
                <h5 class="mt-3">Easy Returns</h5>
                <p class="text-muted">30 day return policy</p>
            </div>
        </div>
    </div>
</div>

<div class="container py-4">
    <div class="row mb-4">
        <div class="col-12">
            <h2 class="section-title">Featured Categories</h2>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4 mb-4">
            <div class="card h-100">
                <div class="card-body d-flex flex-column">
                    <div class="d-flex align-items-center mb-3">
                        <span class="category-icon bg-light-gray p-3 rounded-circle me-3">
                            <i class="bi bi-laptop text-primary fs-4"></i>
                        </span>
                        <h5 class="card-title mb-0">Electronics</h5>
                    </div>
                    <p class="card-text">Explore our wide range of electronic products and accessories.</p>
                    <div class="mt-auto">
                        <a href="#" class="btn btn-outline-primary w-100">Explore <i class="bi bi-arrow-right ms-2"></i></a>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card h-100">
                <div class="card-body d-flex flex-column">
                    <div class="d-flex align-items-center mb-3">
                        <span class="category-icon bg-light-gray p-3 rounded-circle me-3">
                            <i class="bi bi-house-heart text-primary fs-4"></i>
                        </span>
                        <h5 class="card-title mb-0">Home & Living</h5>
                    </div>
                    <p class="card-text">Browse our collection of home decor, furniture, and living essentials.</p>
                    <div class="mt-auto">
                        <a href="#" class="btn btn-outline-primary w-100">Explore <i class="bi bi-arrow-right ms-2"></i></a>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card h-100">
                <div class="card-body d-flex flex-column">
                    <div class="d-flex align-items-center mb-3">
                        <span class="category-icon bg-light-gray p-3 rounded-circle me-3">
                            <i class="bi bi-bag-heart text-primary fs-4"></i>
                        </span>
                        <h5 class="card-title mb-0">Fashion</h5>
                    </div>
                    <p class="card-text">Discover the latest trends in clothing, accessories, and lifestyle products.</p>
                    <div class="mt-auto">
                        <a href="#" class="btn btn-outline-primary w-100">Explore <i class="bi bi-arrow-right ms-2"></i></a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Newsletter Section -->
<div class="container py-5">
    <div class="card bg-light border-0 rounded-3 p-4">
        <div class="row align-items-center">
            <div class="col-lg-6 mb-3 mb-lg-0">
                <h3>Subscribe to Our Newsletter</h3>
                <p class="mb-0">Stay updated with our latest products and special offers</p>
            </div>
            <div class="col-lg-6">
                <form class="d-flex">
                    <input type="email" class="form-control me-2" placeholder="Your email address">
                    <button class="btn btn-primary" type="submit">Subscribe</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // No need for loading animation for better performance
    </script>
}
