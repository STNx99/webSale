@model IEnumerable<WebsiteBanHang.Models.Category>

@{
    ViewData["Title"] = "Categories";
}

<div class="container mt-4">
    <h1 class="text-center">Categories</h1>

    <table class="table table-striped table-bordered mt-4">
        <thead class="thead-dark">
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in Model)
            {
                <tr>
                    <td>@category.Id</td>
                    <td>@category.Name</td>
                    <td>
                        <a asp-action="Display" asp-route-id="@category.Id" class="btn btn-info btn-sm">View</a>
                        <a asp-action="Update" asp-route-id="@category.Id" class="btn btn-warning btn-sm">Update</a>
                        <a asp-action="Delete" asp-route-id="@category.Id" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="text-right">
        <a asp-action="AddCategory" class="btn btn-primary">Add Category</a>
    </div>
</div>
