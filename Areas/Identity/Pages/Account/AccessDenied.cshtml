@page
@model AccessDeniedModel
@{
    ViewData["Title"] = "Access denied";
}

<div class="container text-center py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <i class="bi bi-shield-exclamation text-danger" style="font-size: 5rem;"></i>
            <h1 class="text-danger mt-3">@ViewData["Title"]</h1>
            <p class="lead mb-4">You do not have access to this resource.</p>
            <div class="d-grid gap-2 d-md-block">
                <a class="btn btn-primary" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-house-door me-2"></i>Back to Home
                </a>
                <a class="btn btn-outline-primary" asp-area="Identity" asp-page="/Account/Login">
                    <i class="bi bi-box-arrow-in-right me-2"></i>Sign in with different account
                </a>
            </div>
        </div>
    </div>
</div>